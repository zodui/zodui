{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "zodui": ["packages/zodui/src"],
      "@zodui/*": ["packages/*/src"],
      "@zodui/core/utils": ["packages/core/src/utils.ts"],
      "@zodui/core/external": ["packages/core/src/external.ts"],
      "@zodui/components-lib-*": ["packages/components-lib/*/src"],
      "@zodui/plugin-*": ["packages/plugins/*/src"]
    }
  },
  "exclude": ["pages"]
}
